#include <stdio.h>
#include <stdlib.h>

int main()
{
    float temp, media,temptotal = 0;
    int i = 1, acima=0;

    for( i=0; i<4; i++){
        printf("Digite a temperatura do dia: %d\n", i);
        scanf("%f", &temp);

        if(temp>=27)
            acima++;
    temptotal = temptotal + temp;
    }
    media = temptotal/i;

printf("Acima de 27: %d\n", acima);
printf("Media de temp anual: %f\n", media);


return 0;
}

