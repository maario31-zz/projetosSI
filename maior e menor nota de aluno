#include <stdio.h>
#include <stdlib.h>

int main (){
	int i, alunomaior, alunomenor;
	float nota, maior=0, menor=100;
	
	for(i=0;i<=5;i++)
	{printf("informe a nota do aluno %d:\n", i+1);
	scanf("%f", &nota);
		if(nota>maior){
			maior = nota;
			alunomaior= i+1;
		}
		if(nota<menor){
			menor=nota;
			alunomenor=i+1;
		}
		
	}
	printf("\nA maior nota foi %.2f do aluno %d", maior, alunomaior);
	printf("\nA menor nota foi %.2f do aluno %d", menor, alunomenor);
	
	
	
	return 0;
	system("pause>>NULL");
}
