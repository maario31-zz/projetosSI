/*Ler um valor N inteiro e positivo e que calcula e escreve o valor de E = 1 + 1/1 + 1/2 + ...+ 1/3 + 1 / N */

#include <stdio.h>
#include <stdlib.h>

int main (){

    float soma = 0.0, i;
    int n;

    printf("digite o valor de seu N:\n");
    scanf("%d", &n);

    for(i = 1.0; i <= n; i++){

        soma = soma+ 1/i;
        soma = soma + i;
    }

    printf("Soma total: %f", soma);

return 0;
    }



